<Window x:Class="WPFMiniProjectHomework.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPFMiniProjectHomework"
        mc:Ignorable="d" FontSize="26"
        Title="Person Entry" Height="550" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="auto" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <StackPanel Orientation="Vertical" Grid.Column="1" Grid.Row="1" Margin="0 20 0 0">
            <StackPanel Orientation="Horizontal" Grid.Column="1" Grid.Row="1" Margin="0 0 0 10">
                <Label Content="First Name" Margin="0 0 5 0" MinWidth="135" />
                <TextBox x:Name="firstNameText" MinWidth="250"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" Grid.Column="1" Grid.Row="1" >
                <Label Content="Last Name" Margin="0 0 5 0" MinWidth="135"/>
                <TextBox x:Name="lastNameText" MinWidth="250"/>
            </StackPanel>
        </StackPanel>

        <StackPanel Orientation="Horizontal" Grid.Column="1" Grid.Row="2" Margin="0 30 0 0">
            <Label Content="Addresses" />
            <Button x:Name="addAddresses" MinWidth="100" Margin="164 0 0 0" Content="Add" Click="addAddresses_Click"/>
        </StackPanel>

        <StackPanel Orientation="Vertical" Grid.Column="1" Grid.Row="3" >
            <ListBox x:Name="addressesBox"  Height="235" Margin="0 5 0 0"/>
            <Button x:Name="savePerson" Content="Save" MinWidth="200" Margin="0 15 0 0"/>
        </StackPanel>

    </Grid>
</Window>
